<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.AddUserActivity">

    <include
            android:id="@+id/navigation_header_container"
            layout="@layout/header"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/navigation_header_container"
            android:hint="Имя пользователя"
            android:layout_margin="@dimen/margin_x1"
            android:id="@+id/et_name"
            />


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            android:hint="Дата последней активности (Unixtime)"
            android:layout_margin="@dimen/margin_x1"
            android:id="@+id/et_date"
            />


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_date"
            android:hint="Статус"
            android:layout_margin="@dimen/margin_x1"
            android:id="@+id/et_status"
            />
    <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_status"
            android:layout_margin="@dimen/margin_x1"
            android:text="Онлайн"
            android:id="@+id/cb_online"
            />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cb_online"
            android:text="Добавить"
            android:id="@+id/btn_add"
            android:layout_margin="@dimen/margin_x1"
            />

</androidx.constraintlayout.widget.ConstraintLayout>